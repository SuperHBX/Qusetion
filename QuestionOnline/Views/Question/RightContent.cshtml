<script type="text/javascript">

    $("#sbmSearch").click(function () {
        SearchQuestion($("#keyword").val(), 1);
    });
    function SelectType(o, obj) {
        $("#module").val(o);
        $(obj).parent().children().removeClass("type_bg1");
        $(obj).addClass("type_bg1");

        QuestionPaging();
    }
    $("#has_question").click(function () {
        window.location.href = '@Url.Action("AskQuestion")';
    });
</script>
