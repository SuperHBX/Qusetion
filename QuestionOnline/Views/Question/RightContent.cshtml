<div class="text_centre btn-primary" style="margin-top: 20px;">
    <span id="has_question" class="sizemiddle hand ">
        我要提问
    </span>
</div>
<div class="module_type">

    <ul class="list">
        @foreach (var i in ViewBag.TypeList)
        {
            <li class="type type_bg" onclick="SelectType(@i.Id,this) " style="position:relative; color:white"><img src="~/image/@(i.img)" style=" position:absolute; left:15px;top:8px;" />@i.typename</li>
        }


        <li class="type type_bg" onclick="SelectType(-1,this)" style="color:white">全部</li>
    </ul>
</div>
<br />
<div class="text_centre btn-primary" style="margin-top: 20px;">
    <span class="sizemiddle hand ">
        热门问题
    </span>
</div>
<ul class="tips list">
    @foreach (var i in ViewBag.HotQuestion)
            {
        <li class="hand text_dot" onclick="GoDetail(@(i.Id))">@i.title</li>
    }
</ul>



